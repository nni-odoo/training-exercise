    <record id="action_partner_age_report" model="ir.actions.report">
        <field name="name">Ages Report</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">training.report_res_partner_age</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>


    <template id="report_res_partner_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <table class="table">
                        <tr>
                            <th>Sale Order</th>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                        <tbody>
                            <tr t-foreach="o.sale_order_ids.sorted(lambda x: x.amount_total, reverse=True)" t-as="order">
                                <td><span t-field="order.name"/></td>
                                <td><span t-field="order.date_order"/></td>
                                <td><span t-field="order.amount_total"/></td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>

    <record id="action_partner_sale_report" model="ir.actions.report">
        <field name="name">Sale Report</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">training.report_res_partner_report</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>
</odoo>
