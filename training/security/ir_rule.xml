<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Exercise 4 -->
    <record id="rule_team_leader" model="ir.rule">
        <field name="name">Team Leader View Members</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('training.group_sale_team_leader'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="domain_force">[('user_id.sale_team_id.user_id.id', '=', user.id)]</field>
    </record>
    <record id="sale.sale_order_see_all" model="ir.rule">
        <field name="perm_unlink" eval="0"/>
    </record>
    <record id="rule_sale_no_delete" model="ir.rule">
        <field name="name">Can delete your own SO</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>

</odoo>
